<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#dcff87">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lanzar"
        android:id="@+id/lanzar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#e6ffe5"
        android:onClick="lanza" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cambiar"
        android:id="@+id/cambiar"
        android:layout_alignTop="@+id/lanzar"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:onClick="cambia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="borrar"
        android:id="@+id/borrar"
        android:layout_below="@+id/lanzar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:background="#ffffff"
        android:onClick="borra" />
</RelativeLayout>
